@page "{searchString?}"
@model RazorPagesVideoGame.Pages.VideoGames.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>List of Video Games</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        <select asp-for="VideoGameGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].Studio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].Platform)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGame[0].Price)
            </th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.VideoGame) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Studio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Platform)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
        <tr>
            <td colspan="6" align="right">Total:</td>
            <td align="left">@Model.total</td>
            <td></td>
        </tr>
    </tbody>
</table>